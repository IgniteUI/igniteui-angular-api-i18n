{
    "IgxButtonDirective": {
        "properties": {
            "buttonClick": {
                "comment": {
                    "shortText": "Called when the button is clicked"
                }
            },
            "role": {
                "comment": {
                    "shortText": [
                        "Sets/gets the `role` attribute.",
                        "```typescript",
                        "this.button.role = 'navbutton';",
                        "```",
                        "```typescript",
                        "let buttonRole =  this.button.role;",
                        "```"
                    ]
                }
            },
            "selected": {
                "comment": {
                    "shortText": [
                        "Gets or sets whether the button is selected.",
                        "Mainly used in the IgxButtonGroup component and it will have no effect if set separately.",
                        "```html",
                        "<button igxButton=\"flat\" [selected]=\"button.selected\"></button>",
                        "```"
                    ]
                }
            }
        },
        "methods": {},
        "accessors": {
            "nativeElement": {
                "getter": {
                    "comment": {
                        "shortText": "Returns the underlying DOM element"
                    }
                }
            },
            "type": {
                "setter": {
                    "comment": {
                        "shortText": [
                            "Sets the type of the button.",
                            "```html",
                            "<button  igxButton= \"icon\"></button>",
                            "```"
                        ]
                    }
                }
            },
            "color": {
                "setter": {
                    "comment": {
                        "shortText": [
                            "Sets the button text color.",
                            "```html",
                            "<button igxButton=\"gradient\" igxButtonColor=\"blue\"></button>",
                            "```"
                        ]
                    }
                }
            },
            "background": {
                "setter": {
                    "comment": {
                        "shortText": [
                            "Sets the background color of the button.",
                            "```html",
                            "<button igxButton=\"raised\" igxButtonBackground=\"red\"></button>",
                            "```"
                        ]
                    }
                }
            },
            "label": {
                "setter": {
                    "comment": {
                        "shortText": [
                            "Sets the `aria-label` attribute.",
                            "```html",
                            "<button igxButton= \"flat\" igxLabel=\"Label\"></button>",
                            "```"
                        ]
                    }
                }
            },
            "disabled": {
                "setter": {
                    "comment": {
                        "shortText": [
                            "Enables/disables the button.",
                            " ```html",
                            "<button igxButton= \"fab\" [disabled]=\"true\"></button>",
                            "```"
                        ]
                    }
                }
            }
        }
    }
}