{
    "IgxAccordionComponent": {
        "comment": {
            "blockTags": [
                {
                    "tag": "@igxModule",
                    "content": [
                        {
                            "kind": "text",
                            "text": "IgxAccordionModule"
                        }
                    ]
                },
                {
                    "tag": "@igxKeywords",
                    "content": [
                        {
                            "kind": "text",
                            "text": "accordion"
                        }
                    ]
                },
                {
                    "tag": "@igxGroup",
                    "content": [
                        {
                            "kind": "text",
                            "text": "Layouts"
                        }
                    ]
                },
                {
                    "tag": "@remark",
                    "content": [
                        {
                            "kind": "text",
                            "text": "The Ignite UI for Angular Accordion component enables the user to navigate among multiple collapsing panels\ndisplayed in a single container.\nThe accordion offers keyboard navigation and API to control the underlying panels' expansion state."
                        }
                    ]
                },
                {
                    "tag": "@example",
                    "content": [
                        {
                            "kind": "code",
                            "text": "```html\n<igx-accordion>\n  <igx-expansion-panel *ngFor=\"let panel of panels\">\n      ...\n  </igx-expansion-panel>\n</igx-accordion>\n```"
                        }
                    ]
                }
            ],
            "modifierTags": {},
            "summary": [
                {
                    "kind": "text",
                    "text": "IgxAccordion is a container-based component that contains that can house multiple expansion panels."
                }
            ]
        },
        "properties": {
            "id": {
                "comment": {
                    "blockTags": [],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Get/Set the "
                        },
                        {
                            "kind": "code",
                            "text": "`id`"
                        },
                        {
                            "kind": "text",
                            "text": " of the accordion component.\nDefault value is "
                        },
                        {
                            "kind": "code",
                            "text": "`\"igx-accordion-0\"`"
                        },
                        {
                            "kind": "text",
                            "text": ";\n"
                        },
                        {
                            "kind": "code",
                            "text": "```html\n<igx-accordion id=\"my-first-accordion\"></igx-accordion>\n```"
                        },
                        {
                            "kind": "text",
                            "text": "\n"
                        },
                        {
                            "kind": "code",
                            "text": "```typescript\nconst accordionId = this.accordion.id;\n```"
                        }
                    ]
                }
            },
            "panelExpanding": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "This event is cancelable.\n\n"
                                },
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-accordion (panelExpanding)=\"handlePanelExpanding($event)\">\n</igx-accordion>\n```"
                                },
                                {
                                    "kind": "text",
                                    "text": "\n\n"
                                },
                                {
                                    "kind": "code",
                                    "text": "```typescript\npublic handlePanelExpanding(event: IExpansionPanelCancelableEventArgs){\n const expandedPanel: IgxExpansionPanelComponent = event.panel;\n if (expandedPanel.disabled) {\n     event.cancel = true;\n }\n}\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Emitted before a panel is expanded."
                        }
                    ]
                }
            },
            "panelExpanded": {
                "comment": {
                    "blockTags": [],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Emitted after a panel has been expanded.\n\n"
                        },
                        {
                            "kind": "code",
                            "text": "```html\n<igx-accordion (panelExpanded)=\"handlePanelExpanded($event)\">\n</igx-accordion>\n```"
                        },
                        {
                            "kind": "text",
                            "text": "\n\n"
                        },
                        {
                            "kind": "code",
                            "text": "```typescript\npublic handlePanelExpanded(event: IExpansionPanelCancelableEventArgs) {\n const expandedPanel: IgxExpansionPanelComponent = event.panel;\n console.log(\"Panel is expanded: \", expandedPanel.id);\n}\n```"
                        }
                    ]
                }
            },
            "panelCollapsing": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "This event is cancelable.\n\n"
                                },
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-accordion (panelCollapsing)=\"handlePanelCollapsing($event)\">\n</igx-accordion>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Emitted before a panel is collapsed."
                        }
                    ]
                }
            },
            "panelCollapsed": {
                "comment": {
                    "blockTags": [],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Emitted after a panel has been collapsed.\n\n"
                        },
                        {
                            "kind": "code",
                            "text": "```html\n<igx-accordion (panelCollapsed)=\"handlePanelCollapsed($event)\">\n</igx-accordion>\n```"
                        }
                    ]
                }
            }
        },
        "methods": {
            "expandAll": {
                "comment": {
                    "blockTags": [],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Expands all collapsed expansion panels.\n\n"
                        },
                        {
                            "kind": "code",
                            "text": "```typescript\naccordion.expandAll();\n```"
                        }
                    ]
                }
            },
            "collapseAll": {
                "comment": {
                    "blockTags": [],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Collapses all expanded expansion panels.\n\n"
                        },
                        {
                            "kind": "code",
                            "text": "```typescript\naccordion.collapseAll();\n```"
                        }
                    ]
                }
            }
        },
        "accessors": {
            "animationSettings": {
                "getter": {
                    "comment": {
                        "blockTags": [],
                        "modifierTags": {},
                        "summary": [
                            {
                                "kind": "text",
                                "text": "Get/Set the animation settings that panels should use when expanding/collpasing.\n\n"
                            },
                            {
                                "kind": "code",
                                "text": "```html\n<igx-accordion [animationSettings]=\"customAnimationSettings\"></igx-accordion>\n```"
                            },
                            {
                                "kind": "text",
                                "text": "\n\n"
                            },
                            {
                                "kind": "code",
                                "text": "```typescript\nconst customAnimationSettings: ToggleAnimationSettings = {\n     openAnimation: growVerIn,\n     closeAnimation: growVerOut\n};\n\nthis.accordion.animationSettings = customAnimationSettings;\n```"
                            }
                        ]
                    }
                }
            },
            "singleBranchExpand": {
                "getter": {
                    "comment": {
                        "blockTags": [],
                        "modifierTags": {},
                        "summary": [
                            {
                                "kind": "text",
                                "text": "Get/Set how the accordion handles the expansion of the projected expansion panels.\nIf set to "
                            },
                            {
                                "kind": "code",
                                "text": "`true`"
                            },
                            {
                                "kind": "text",
                                "text": ", only a single panel can be expanded at a time, collapsing all others\n\n"
                            },
                            {
                                "kind": "code",
                                "text": "```html\n<igx-accordion [singleBranchExpand]=\"true\">\n...\n</igx-accordion>\n```"
                            },
                            {
                                "kind": "text",
                                "text": "\n\n"
                            },
                            {
                                "kind": "code",
                                "text": "```typescript\nthis.accordion.singleBranchExpand = false;\n```"
                            }
                        ]
                    }
                }
            },
            "panels": {
                "getter": {
                    "comment": {
                        "blockTags": [],
                        "modifierTags": {},
                        "summary": [
                            {
                                "kind": "text",
                                "text": "Get all panels.\n\n"
                            },
                            {
                                "kind": "code",
                                "text": "```typescript\nconst panels: IgxExpansionPanelComponent[] = this.accordion.panels;\n```"
                            }
                        ]
                    }
                }
            }
        }
    }
}