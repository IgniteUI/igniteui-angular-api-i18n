                            "@ViewChild(\"MyDatePicker\")",
                            "public datePicker: IgxDatePickerComponent;",
                            "ngAfterViewInit(){",
                            "   this.Views = {day:false, month: false, year:false};",
                            "   this.datePicker.formatViews = this.Views;",
                            "}",
