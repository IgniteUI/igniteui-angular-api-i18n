            "ghostCreate": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@次のメンバー",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "IgxDragDirective"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Event triggered when the drag ghost element is created.\n"
                        },
                        {
                            "kind": "code",
                            "text": "```html\n<div igxDrag (ghostCreate)=\"ghostCreated()\">\n        <span>Drag Me!</span>\n</div>\n```"
