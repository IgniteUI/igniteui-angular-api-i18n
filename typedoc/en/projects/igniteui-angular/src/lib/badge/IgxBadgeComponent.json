{
    "IgxBadgeComponent": {
        "comment": {
            "blockTags": [
                {
                    "tag": "@igxModule",
                    "content": [
                        {
                            "kind": "text",
                            "text": "IgxBadgeModule"
                        }
                    ]
                },
                {
                    "tag": "@igxTheme",
                    "content": [
                        {
                            "kind": "text",
                            "text": "igx-badge-theme"
                        }
                    ]
                },
                {
                    "tag": "@igxKeywords",
                    "content": [
                        {
                            "kind": "text",
                            "text": "badge, icon, notification"
                        }
                    ]
                },
                {
                    "tag": "@igxGroup",
                    "content": [
                        {
                            "kind": "text",
                            "text": "Data Entry & Display"
                        }
                    ]
                },
                {
                    "tag": "@remarks",
                    "content": [
                        {
                            "kind": "text",
                            "text": "The Ignite UI Badge is used to decorate avatars, navigation menus, or other components in the\napplication when visual notification is needed. They are usually designed as icons with a predefined\nstyle to communicate information, success, warnings, or errors."
                        }
                    ]
                },
                {
                    "tag": "@example",
                    "content": [
                        {
                            "kind": "code",
                            "text": "```html\n<igx-avatar>\n  <igx-badge icon=\"check\" type=\"success\"></igx-badge>\n</igx-avatar>"
                        }
                    ]
                }
            ],
            "modifierTags": {},
            "summary": [
                {
                    "kind": "text",
                    "text": "Badge provides visual notifications used to decorate avatars, menus, etc."
                }
            ]
        },
        "properties": {
            "id": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "If not set, the "
                                },
                                {
                                    "kind": "code",
                                    "text": "`id`"
                                },
                                {
                                    "kind": "text",
                                    "text": " will have value "
                                },
                                {
                                    "kind": "code",
                                    "text": "`\"igx-badge-0\"`"
                                },
                                {
                                    "kind": "text",
                                    "text": "."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-badge id=\"igx-badge-2\"></igx-badge>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the "
                        },
                        {
                            "kind": "code",
                            "text": "`id`"
                        },
                        {
                            "kind": "text",
                            "text": " of the badge."
                        }
                    ]
                }
            },
            "type": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "Allowed values are "
                                },
                                {
                                    "kind": "code",
                                    "text": "`primary`"
                                },
                                {
                                    "kind": "text",
                                    "text": ", "
                                },
                                {
                                    "kind": "code",
                                    "text": "`info`"
                                },
                                {
                                    "kind": "text",
                                    "text": ", "
                                },
                                {
                                    "kind": "code",
                                    "text": "`success`"
                                },
                                {
                                    "kind": "text",
                                    "text": ", "
                                },
                                {
                                    "kind": "code",
                                    "text": "`warning`"
                                },
                                {
                                    "kind": "text",
                                    "text": ", "
                                },
                                {
                                    "kind": "code",
                                    "text": "`error`"
                                },
                                {
                                    "kind": "text",
                                    "text": ".\nProviding an invalid value won't display a badge."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-badge type=\"success\"></igx-badge>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the type of the badge."
                        }
                    ]
                }
            },
            "value": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "If an "
                                },
                                {
                                    "kind": "code",
                                    "text": "`icon`"
                                },
                                {
                                    "kind": "text",
                                    "text": " property is already set the "
                                },
                                {
                                    "kind": "code",
                                    "text": "`icon`"
                                },
                                {
                                    "kind": "text",
                                    "text": " will be displayed.\nIf neither a "
                                },
                                {
                                    "kind": "code",
                                    "text": "`value`"
                                },
                                {
                                    "kind": "text",
                                    "text": " nor an "
                                },
                                {
                                    "kind": "code",
                                    "text": "`icon`"
                                },
                                {
                                    "kind": "text",
                                    "text": " is set the content of the badge will be empty."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-badge value=\"11\"></igx-badge>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the value to be displayed inside the badge."
                        }
                    ]
                }
            },
            "icon": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@remarks",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "Has priority over the "
                                },
                                {
                                    "kind": "code",
                                    "text": "`value`"
                                },
                                {
                                    "kind": "text",
                                    "text": " property.\nIf neither a "
                                },
                                {
                                    "kind": "code",
                                    "text": "`value`"
                                },
                                {
                                    "kind": "text",
                                    "text": " nor an "
                                },
                                {
                                    "kind": "code",
                                    "text": "`icon`"
                                },
                                {
                                    "kind": "text",
                                    "text": " is set the content of the badge will be empty.\nProviding an invalid value won't display anything."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-badge icon=\"check\"></igx-badge>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets an icon for the badge from the material icons set."
                        }
                    ]
                }
            },
            "role": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```typescript\n@ViewChild(\"MyBadge\", { read: IgxBadgeComponent })\npublic badge: IgxBadgeComponent;\n\nbadge.role = 'status';\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the role attribute value."
                        }
                    ]
                }
            },
            "cssClass": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```typescript\n@ViewChild(\"MyBadge\", { read: IgxBadgeComponent })\npublic badge: IgxBadgeComponent;\n\nbadge.cssClass = 'my-badge-class';\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the the css class to use on the badge."
                        }
                    ]
                }
            },
            "shape": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-badge shape=\"square\"></igx-badge>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets a square shape to the badge, if "
                        },
                        {
                            "kind": "code",
                            "text": "`shape`"
                        },
                        {
                            "kind": "text",
                            "text": " is set to "
                        },
                        {
                            "kind": "code",
                            "text": "`square`"
                        },
                        {
                            "kind": "text",
                            "text": ".\nBy default the shape of the badge is rounded."
                        }
                    ]
                }
            },
            "label": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```typescript\n@ViewChild(\"MyBadge\", { read: IgxBadgeComponent })\npublic badge: IgxBadgeComponent;\n\nbadge.label = 'badge';\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "Sets/gets the aria-label attribute value."
                        }
                    ]
                }
            }
        },
        "methods": {},
        "accessors": {}
    }
}