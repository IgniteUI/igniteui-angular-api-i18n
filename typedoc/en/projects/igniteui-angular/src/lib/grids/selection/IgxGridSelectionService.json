{
    "IgxGridSelectionService": {
        "properties": {},
        "methods": {
            "initKeyboardState": {
                "comment": {
                    "shortText": "Resets the keyboard state"
                }
            },
            "initPointerState": {
                "comment": {
                    "shortText": "Resets the pointer state"
                }
            },
            "add": {
                "comment": {
                    "shortText": [
                        "Adds a single node.",
                        "Single clicks | Ctrl + single clicks on cells is the usual case."
                    ]
                }
            },
            "addKeyboardRange": {
                "comment": {
                    "shortText": "Adds the active keyboard range selection (if any) to the `ranges` meta."
                }
            },
            "generateRange": {
                "comment": {
                    "shortText": [
                        "Generates a new selection range from the given `node`.",
                        "If `state` is passed instead it will generate the range based on the passed `node`",
                        "and the start node of the `state`."
                    ]
                }
            },
            "keyboardStateOnKeydown": {
                "comment": {}
            },
            "_moveSelectionChrome": {
                "comment": {
                    "shortText": [
                        "(╯°□°）╯︵ ┻━┻",
                        "Chrome and Chromium don't care about the active",
                        "range after keyboard navigation, thus this."
                    ]
                }
            },
            "getSelectedRows": {
                "comment": {
                    "shortText": "Returns array of the selected row id's."
                }
            },
            "clearRowSelection": {
                "comment": {
                    "shortText": "Clears row selection, if filtering is applied clears only selected rows from filtered data."
                }
            },
            "selectAllRows": {
                "comment": {
                    "shortText": "Select all rows, if filtering is applied select only from filtered data."
                }
            },
            "selectRowById": {
                "comment": {
                    "shortText": "Select the specified row and emit event."
                }
            },
            "deselectRow": {
                "comment": {
                    "shortText": "Deselect the specified row and emit event."
                }
            },
            "selectRowsWithNoEvent": {
                "comment": {
                    "shortText": "Select specified rows. No event is emitted."
                }
            },
            "deselectRowsWithNoEvent": {
                "comment": {
                    "shortText": "Deselect specified rows. No event is emitted."
                }
            },
            "selectMultipleRows": {
                "comment": {
                    "shortText": "Select range from last selected row to the current specified row."
                }
            },
            "clearAllSelectedRows": {
                "comment": {
                    "shortText": "Clear rowSelection and update checkbox state"
                }
            }
        },
        "accessors": {
            "ranges": {
                "getter": {
                    "comment": {
                        "shortText": [
                            "Returns the current selected ranges in the grid from both",
                            "keyboard and pointer interactions"
                        ]
                    }
                }
            },
            "allData": {
                "getter": {
                    "comment": {
                        "shortText": "Returns all data in the grid, with applied filtering and sorting and without deleted rows."
                    }
                }
            }
        }
    }
}