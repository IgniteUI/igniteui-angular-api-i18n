{
    "IgxCardActionsComponent": {
        "comment": {
            "blockTags": [],
            "modifierTags": {},
            "summary": [
                {
                    "kind": "text",
                    "text": "IgxCardActions is container for the card actions."
                }
            ]
        },
        "properties": {
            "layout": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@Input",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "property that sets the layout style of the actions.\nYou can justify the elements slotted in the igx-card-action container\nso that they are positioned equally from one another taking up all the\nspace available along the card actions axis."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-card-actions layout=\"justify\"></igx-card-actions>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "An"
                        }
                    ]
                }
            },
            "vertical": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@Input",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "property that sets the vertical attribute of the actions.\nWhen set to "
                                },
                                {
                                    "kind": "code",
                                    "text": "`true`"
                                },
                                {
                                    "kind": "text",
                                    "text": " the actions will be layed out vertically."
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": [
                        {
                            "kind": "text",
                            "text": "An"
                        }
                    ]
                }
            },
            "reverse": {
                "comment": {
                    "blockTags": [
                        {
                            "tag": "@deprecated",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "in version 15.1.0.\n\nAn"
                                }
                            ]
                        },
                        {
                            "tag": "@Input",
                            "content": [
                                {
                                    "kind": "text",
                                    "text": "property that reverses the order of the buttons in the actions area."
                                }
                            ]
                        },
                        {
                            "tag": "@example",
                            "content": [
                                {
                                    "kind": "code",
                                    "text": "```html\n<igx-card-actions [reverse]=\"true\"></igx-card-actions>\n```"
                                }
                            ]
                        }
                    ],
                    "modifierTags": {},
                    "summary": []
                }
            }
        },
        "methods": {},
        "accessors": {
            "isJustifyLayout": {
                "getter": {
                    "comment": {
                        "blockTags": [],
                        "modifierTags": {},
                        "summary": [
                            {
                                "kind": "text",
                                "text": "A getter that returns "
                            },
                            {
                                "kind": "code",
                                "text": "`true`"
                            },
                            {
                                "kind": "text",
                                "text": " when the layout has been\nset to "
                            },
                            {
                                "kind": "code",
                                "text": "`justify`"
                            },
                            {
                                "kind": "text",
                                "text": "."
                            }
                        ]
                    }
                }
            }
        }
    }
}