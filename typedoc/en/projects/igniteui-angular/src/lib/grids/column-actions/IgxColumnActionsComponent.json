{
    "IgxColumnActionsComponent": {
        "comment": {
            "shortText": [
                "Providing reference to `IgxColumnActionsComponent`:",
                "```typescript",
                " @ViewChild('columnActions', { read: IgxColumnActionsComponent })",
                " public columnActions: IgxColumnActionsComponent;"
            ]
        },
        "properties": {
            "title": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```html",
                                    "<igx-column-actions [title]=\"'Pin Columns'\"></igx-column-actions>",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Gets/sets the title of the column actions component."
                }
            },
            "hideFilter": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```html",
                                    " <igx-column-actions [hideFilter]=\"true\"></igx-column-actions>",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Shows/hides the columns filtering input from the UI."
                }
            },
            "columnItems": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```typescript",
                                    "let columnItems =  this.columnActions.columnItems;",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Gets the checkbox components representing column items currently present in the dropdown"
                }
            },
            "columnsAreaMaxHeight": {
                "comment": {
                    "tags": {
                        "remarks": {
                            "comment": {
                                "text": "The default max height is 100%.",
                                "tagName": "remarks"
                            }
                        },
                        "example": {
                            "comment": {
                                "text": [
                                    "```html",
                                    "<igx-column-actions [columnsAreaMaxHeight]=\"200px\"></igx-column-actions>",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Gets/sets the max height of the columns area."
                }
            },
            "indentation": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```",
                                    "<igx-column-actions [indentation]=\"15\"></igx-column-actions>",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Gets/sets the indentation of columns in the column list based on their hierarchy level."
                }
            },
            "onColumnToggled": {
                "comment": {
                    "shortText": [
                        "An event that is emitted after a column's checked state is changed.",
                        "Provides references to the `column` and the `checked` properties as event arguments.",
                        "```html",
                        " <igx-column-actions (onColumnToggled)=\"onColumnToggled($event)\"></igx-column-actions>",
                        "```"
                    ]
                }
            },
            "cssClass": {
                "comment": {
                    "shortText": [
                        "Sets/Gets the css class selector.",
                        "By default the value of the `class` attribute is `\"igx-column-hiding\"`.",
                        "```typescript",
                        "let cssCLass =  this.columnHidingUI.cssClass;",
                        "```",
                        "```typescript",
                        "this.columnHidingUI.cssClass = 'column-chooser';",
                        "```"
                    ]
                }
            }
        },
