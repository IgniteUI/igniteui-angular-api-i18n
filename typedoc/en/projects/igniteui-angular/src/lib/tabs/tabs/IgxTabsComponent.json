                },
                "example": {
                    "comment": {
                        "text": [
                            "```html",
                            "<igx-tabs>",
                            "    <igx-tab-item>",
                            "        <igx-tab-header>",
                            "            <igx-icon igxTabHeaderIcon>folder</igx-icon>",
                            "            <span igxTabHeaderLabel>Tab 1</span>",
                            "        </igx-tab-header>",
                            "        <igx-tab-content>",
                            "            Content 1",
                            "        </igx-tab-content>",
                            "    </igx-tab-item>",
                            "    ...",
                            "</igx-tabs>",
                            "```"
