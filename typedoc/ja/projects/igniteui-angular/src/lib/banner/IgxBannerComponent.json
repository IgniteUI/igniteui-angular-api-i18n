                            "import { slideInLeft, slideOutRight } from 'igniteui-angular';",
                            "...",
                            "banner.animationSettings: AnimationSettings = { openAnimation: slideInLeft, closeAnimation: slideOutRight };",
                            "```"
                        ]
                    }
                }
            },
