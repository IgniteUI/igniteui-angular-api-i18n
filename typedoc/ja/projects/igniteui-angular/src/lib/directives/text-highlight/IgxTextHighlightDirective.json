{
    "IgxTextHighlightDirective": {
        "properties": {
            "cssClass": {
                "comment": {
                    "text": [
                        "```html",
                        "<div",
                        "  igxTextHighlight",
                        "  [cssClass]=\"myClass\">",
                        "</div>",
                        "```"
                    ],
                    "shortText": [
                        "Determines the `CSS` class of the highlight elements.",
                        "This allows the developer to provide custom `CSS` to customize the highlight."
                    ]
                }
            },
            "activeCssClass": {
                "comment": {
                    "text": [
                        "```html",
                        "<div",
                        "  igxTextHighlight",
                        "  [activeCssClass]=\"activeHighlightClass\">",
                        "</div>",
                        "```"
                    ],
                    "shortText": [
                        "Determines the `CSS` class of the active highlight element.",
                        "This allows the developer to provide custom `CSS` to customize the highlight."
                    ]
                }
            },
            "groupName": {
                "comment": {
                    "text": [
                        "```html",
                        "<div",
                        "  igxTextHighlight",
                        "  [groupName]=\"myGroupName\">",
                        "</div>",
                        "```"
                    ],
                    "shortText": [
                        "Identifies the highlight within a unique group.",
                        "This allows it to have several different highlight groups,",
                        "with each of them having their own active highlight."
                    ]
                }
            },
            "row": {
                "comment": {
                    "text": [
                        "```html",
                        "<div",
                        "  igxTextHighlight",
                        "  [row]=\"0\">",
                        "</div>",
                        "```"
                    ],
                    "shortText": "The identifier of the row on which the directive is currently on."
                }
            },
            "column": {
                "comment": {
                    "text": [
                        "```html",
                        "<div",
                        "  igxTextHighlight",
                        "  [column]=\"0\">",
                        "</div>",
                        "```"
                    ],
                    "shortText": "The identifier of the column on which the directive is currently on."
                }
            }
        },
        "methods": {
            "setActiveHighlight": {
                "comment": {
                    "shortText": [
                        "Activates the highlight at a given index.",
                        "(if such index exists)"
                    ]
                }
            },
            "clearActiveHighlight": {
                "comment": {
                    "shortText": "Clears any existing highlight."
                }
            },
            "highlight": {
                "comment": {
                    "shortText": [
                        "Clears the existing highlight and highlights the searched text.",
                        "Returns how many times the element contains the searched text."
                    ]
                }
            },
            "clearHighlight": {
                "comment": {
                    "shortText": "Clears any existing highlight."
                }
            },
            "activateIfNecessary": {
                "comment": {
                    "shortText": "Activates the highlight if it is on the currently active row, column and page."
                }
            },
            "observe": {
                "comment": {
                    "shortText": [
                        "Attaches a MutationObserver to the parentElement and watches for when the container element is removed/readded to the DOM.",
                        "Should be used only when necessary as using many observers may lead to performance degradation."
                    ]
                }
            }
        },
        "accessors": {
            "value": {
                "getter": {
                    "comment": {
                        "text": [
                            "```typescript",
                            "// get",
                            "const elementValue = this.textHighlight.value;",
                            "```",
                            "```html",
                            "<!--set-->",
                            "<div",
                            "  igxTextHighlight",
                            "  [value]=\"newValue\">",
                            "</div>",
                            "```"
                        ],
                        "shortText": "The underlying value of the element that will be highlighted."
                    }
                },
                "setter": {
                    "comment": {
                        "text": [
                            "```typescript",
                            "// get",
                            "const elementValue = this.textHighlight.value;",
                            "```",
                            "```html",
                            "<!--set-->",
                            "<div",
                            "  igxTextHighlight",
                            "  [value]=\"newValue\">",
                            "</div>",
                            "```"
                        ],
                        "shortText": "The underlying value of the element that will be highlighted."
                    }
                }
            }
        }
    }
}