                "igxgroup": {
                    "comment": {
                        "text": "Data Entry & Display",
                        "tagName": "igxgroup"
                    }
                },
                "remarks": {
                    "comment": {
                        "text": [
                            "The Ignite UI Action Strip is a container, overlaying its parent container,",
                            "and displaying action buttons with action applicable to the parent component the strip is instantiated or shown for."
                        ],
                        "tagName": "remarks"
                    }
                },
                "example": {
                    "comment": {
                        "text": [
                            "```html",
                            "<igx-action-strip #actionStrip>",
                            "    <igx-icon (click)=\"doSomeAction()\"></igx-icon>",
                            "</igx-action-strip>"
                        ],
                        "tagName": "example"
                    }
                }
            },
            "shortText": "Action Strip provides templatable area for one or more actions."
        },
        "properties": {
            "context": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```html",
                                    "<igx-action-strip [context]=\"cell\"></igx-action-strip>",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": [
                        "Sets the context of an action strip.",
                        "The context should be an instance of a @Component, that has element property.",
                        "This element will be the placeholder of the action strip."
                    ]
                }
            }
        },
        "methods": {
            "show": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```typescript",
                                    "this.actionStrip.show(row);",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Showing the Action Strip and appending it the specified context element."
                }
            },
            "hide": {
                "comment": {
                    "tags": {
                        "example": {
                            "comment": {
                                "text": [
                                    "```typescript",
                                    "this.actionStrip.hide();",
                                    "```"
                                ],
                                "tagName": "example"
                            }
                        }
                    },
                    "shortText": "Hiding the Action Strip and removing it from its current context element."
                }
            }
        },
        "accessors": {
            "hidden": {
                "getter": {
                    "comment": {
                        "tags": {
                            "example": {
                                "comment": {
                                    "text": [
